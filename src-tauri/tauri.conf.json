{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RBW-Tech OVPN",
  "version": "0.2.0",
  "identifier": "com.radip.rbw-vpn-client",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RBW-Tech OVPN",
        "width": 420,
        "height": 760,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": ["resources/*"],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English"],
        "displayLanguageSelector": false
      }
    },
    "publisher": "RBW-Tech",
    "copyright": "Copyright Â© 2025 RBW-Tech",
    "shortDescription": "OpenVPN Client Manager",
    "longDescription": "Legitimate VPN client for managing OpenVPN connections"
  }
}
